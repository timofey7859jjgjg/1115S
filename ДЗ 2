import random

class Dog:
    def __init__(self, name, age):
        self.name = name
        self.age = age
        self.energy = 100
        self.hunger = 0
        self.mood = 100
        self.health = 100
        self.cleanliness = 100
        self.alive = True

    def _check_alive(self):
        if self.health <= 0 or self.energy <= 0:
            self.alive = False
            print(f"[{self.name}] Ð¾Ñ‡ÐµÐ½ÑŒ Ð¾ÑÐ»Ð°Ð± Ð¸ Ð±Ð¾Ð»ÑŒÑˆÐµ Ð½Ðµ Ð¼Ð¾Ð¶ÐµÑ‚ Ð´Ð²Ð¸Ð³Ð°Ñ‚ÑŒÑÑ...")
