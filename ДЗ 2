        if not self._check_alive():
            return
        print(f"[{self.name}] Ð¸Ð³Ñ€Ð°ÐµÑ‚ Ñ Ð¼ÑÑ‡Ð¸ÐºÐ¾Ð¼ ðŸŽ¾") 
        self.energy -= 15
        self.hunger += 10
        self.mood = min(100, self.mood + 20)
        self.cleanliness -= 10

    def wash(self):
        if not self._check_alive():
            return
        print(f"[{self.name}] Ð¿Ñ€Ð¸Ð½Ð¸Ð¼Ð°ÐµÑ‚ Ð²Ð°Ð½Ð½Ñƒ ðŸ›") 
        self.cleanliness = 100
        self.energy -= 10
        self.mood += 5

    def visit_vet(self):
        if not self._check_alive():
            return
        print(f"[{self.name}] Ð¿Ð¾ÑÐµÑ‰Ð°ÐµÑ‚ Ð²ÐµÑ‚ÐµÑ€Ð¸Ð½Ð°Ñ€Ð° ðŸ©º") 
