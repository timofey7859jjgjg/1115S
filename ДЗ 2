    def hunt(self):
        if not self._check_alive():
            return
        print(f"[{self.name}] Ð¿Ñ‹Ñ‚Ð°ÐµÑ‚ÑÑ Ð¿Ð¾Ð¹Ð¼Ð°Ñ‚ÑŒ Ð±ÐµÐ»ÐºÑƒ ðŸ¿ï¸...") 
        success = random.choice([True, False])
