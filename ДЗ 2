            print(f"[{self.name}] Ð½Ð°ÑˆÑ‘Ð» Ñ‡Ñ‚Ð¾-Ñ‚Ð¾ Ð¸Ð½Ñ‚ÐµÑ€ÐµÑÐ½Ð¾Ðµ! ðŸ¥³") 
            self.hunger = max(0, self.hunger - 40)
            self.mood = min(100, self.mood + 15)
        else:
            print(f"[{self.name}] Ð½Ð¸Ñ‡ÐµÐ³Ð¾ Ð½Ðµ Ð½Ð°ÑˆÐµÐ» ðŸ’¨") 
            self.mood -= 10

    def wag_tail(self): 
        if not self._check_alive():
            return
        print(f"[{self.name}] Ð²Ð¸Ð»ÑÐµÑ‚ Ñ…Ð²Ð¾ÑÑ‚Ð¾Ð¼ â¤")
        self.mood = min(100, self.mood + 10)
        self.energy -= 5

    def get_sick(self):
        if not self._check_alive():
            return
        print(f"[{self.name}] Ð·Ð°Ð±Ð¾Ð»ÐµÐ» ðŸ¤’") 
        self.health = 30
        self.mood = 20

    def status(self):
        print(f"\n--- Ð¡Ð¾ÑÑ‚Ð¾ÑÐ½Ð¸Ðµ ÑÐ¾Ð±Ð°ÐºÐ¸ {self.name} ---")
        print(f"Ð’Ð¾Ð·Ñ€Ð°ÑÑ‚: {self.age} Ð»ÐµÑ‚") 
