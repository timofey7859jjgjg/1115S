        self.hunger = max(0, self.hunger - 30)
        self.energy = min(100, self.energy + 15)
        self.mood += 10
        self.cleanliness -= 5

    def sleep(self):
        if not self._check_alive():
            return
        print(f"[{self.name}] ÑÐ¿Ð¸Ñ‚... ðŸ˜´")
        self.energy = min(100, self.energy + 40)
        self.hunger += 10
        self.mood += 5

